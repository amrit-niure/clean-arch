generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  firstName      String
  lastName       String
  email          String
  hashedPassword String
  role           Role      @default(USER)
  email_verified Boolean
  sessions       Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  // Relationships
  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

enum Role {
  ADMIN
  USER
}
